Options +FollowSymLinks
RewriteEngine On

RewriteRule ^video/new video/new.php
RewriteRule ^video/hot video/hot.php
RewriteRule ^video/following video/following.php
RewriteRule ^video/featured video/featured.php


# The first 2 conditions may or may not be relevant for your needs
# If the request is not for a valid file

# [NC, QSA] misconfig err
# [QSA,L] query with .php

RewriteCond %{REQUEST_FILENAME} !-d

# If the request is not for a valid directory
RewriteCond %{REQUEST_FILENAME} !-f

# This rule converts your flat link to a query
RewriteRule ^video/(.*) video/videoid.php?id=$1 [L,NC,NE]
